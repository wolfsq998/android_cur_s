<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.install.MainActivity"
    android:background="@color/colorDiSe">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/master_hsv_ll"
        android:longClickable="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="384dp"
            android:layout_height="match_parent"
            android:id="@+id/order_win_ll"
            android:weightSum="1"
            android:background="@color/colorDiSe">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/icon_back1"
                android:id="@+id/curtain_win_head_image">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView21"
                    android:background="#28030303"
                    android:layout_below="@+id/linearLayout6" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/textView11"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="#47030303"
                    android:id="@+id/linearLayout6">

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/my_info_but"
                        android:background="@drawable/icon_my2"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView39"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:layout_below="@+id/linearLayout7"
                        android:layout_toRightOf="@+id/imageView22"
                        android:layout_toEndOf="@+id/imageView22"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:text="@string/app_name" />
                </LinearLayout>

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:id="@+id/imageView"
                    android:background="@drawable/icon_curtain1"
                    android:layout_below="@+id/linearLayout6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="窗帘"
                    android:id="@+id/textView11"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="25dp" />

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/order_info_sv"
                android:layout_weight="1"
                android:scrollbars="none">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:id="@+id/linearLayout2"
                        android:clickable="false"
                        android:divider="@drawable/icon_line2"
                        android:showDividers="beginning|middle|end">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="客户信息"
                            android:id="@+id/textView15"
                            android:textColor="@color/colorTitle"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:background="@color/colorDiSe" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:layout_weight="0">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/customer_name"
                                android:id="@+id/textView17"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/colorfont"
                                android:gravity="center"
                                android:layout_weight="0.25"
                                android:textSize="16dp"
                                android:background="@drawable/shape_free" />

                            <EditText
                                style="@style/my_edittext_style"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/cus_name_et"
                                android:textColor="@color/colorBlack"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_weight="0.74"
                                android:hint="填写客户名称"
                                android:textColorHint="@color/textcolorhint"
                                android:background="@color/colorAlpha1"
                                android:maxLines="1"
                                android:lines="1"
                                android:imeOptions="actionNext"
                                android:inputType="text" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:id="@+id/button7"
                                android:background="@color/colorAlpha1"
                                android:enabled="true"
                                android:paddingLeft="12dp"
                                android:layout_weight="0.01"
                                android:layout_gravity="center_vertical" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:layout_weight="0" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/customer_tel"
                                android:id="@+id/textView5"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/colorfont"
                                android:gravity="center"
                                android:layout_weight="0.25"
                                android:textSize="16dp"
                                android:background="@drawable/shape_free" />

                            <EditText
                                style="@style/my_edittext_style"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorBlack"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_weight="0.74"
                                android:hint="填写客户电话"
                                android:textColorHint="@color/textcolorhint"
                                android:background="@color/colorAlpha1"
                                android:id="@+id/cus_tel_et"
                                android:maxLength="11"
                                android:maxLines="1"
                                android:inputType="number"
                                android:lines="1"
                                android:imeOptions="actionNext"/>

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:id="@+id/button6"
                                android:background="@color/colorAlpha1"
                                android:enabled="true"
                                android:paddingLeft="12dp"
                                android:layout_weight="0.01"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:layout_weight="0" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/customer_address"
                                android:id="@+id/textView12"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/colorfont"
                                android:gravity="center"
                                android:layout_weight="0.25"
                                android:textSize="16dp"
                                android:background="@drawable/shape_free" />

                            <EditText
                                style="@style/my_edittext_style"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/cus_addr_et"
                                android:textColor="@color/colorBlack"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_weight="0.74"
                                android:hint="填写客户地址"
                                android:textColorHint="@color/textcolorhint"
                                android:background="@color/colorAlpha1"
                                android:maxLines="1"
                                android:lines="1"
                                android:inputType="text"
                                android:imeOptions="actionNext"/>

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:id="@+id/button5"
                                android:background="@color/colorAlpha1"
                                android:enabled="true"
                                android:paddingLeft="12dp"
                                android:layout_weight="0.01"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:layout_weight="0" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/customer_time"
                                android:id="@+id/textView13"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/colorfont"
                                android:gravity="center"
                                android:layout_weight="0.25"
                                android:textSize="16dp"
                                android:background="@drawable/shape_free" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/date_picker_but"
                                android:layout_weight="0.74"
                                android:background="@color/colorAlpha1"
                                android:textColor="@color/colorBlack"
                                android:hint="选择上门时间"
                                android:textColorHint="@color/textcolorhint"
                                android:textSize="17dp"
                                android:layout_gravity="center_vertical" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:id="@+id/button2"
                                android:background="@color/colorAlpha1"
                                android:enabled="true"
                                android:paddingLeft="12dp"
                                android:layout_weight="0.01"
                                android:layout_gravity="center_vertical" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:visibility="gone">

                                <EditText
                                    style="@style/my_edittext_style"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/visit_time_year_et"
                                    android:textColor="@color/colorBlack"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center"
                                    android:layout_weight="0.2"
                                    android:textColorHint="#d0d1d2"
                                    android:inputType="number"
                                    android:background="@color/colorAlpha1"
                                    android:maxLength="4"
                                    android:maxLines="1"
                                    android:lines="1"
                                    android:selectAllOnFocus="true" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="年"
                                    android:id="@+id/textView6"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/colorfont"
                                    android:gravity="center"
                                    android:textSize="16dp" />

                                <EditText
                                    style="@style/my_edittext_style"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/visit_time_month_et"
                                    android:textColor="@color/colorBlack"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center"
                                    android:layout_weight="0.2"
                                    android:textColorHint="#d0d1d2"
                                    android:inputType="number"
                                    android:background="@color/colorAlpha1"
                                    android:maxLines="1"
                                    android:maxLength="2"
                                    android:lines="1"
                                    android:selectAllOnFocus="true" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="月"
                                    android:id="@+id/textView23"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/colorfont"
                                    android:gravity="center"
                                    android:textSize="16dp" />

                                <EditText
                                    style="@style/my_edittext_style"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/visit_time_day_et"
                                    android:textColor="@color/colorBlack"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center"
                                    android:layout_weight="0.2"
                                    android:textColorHint="#d0d1d2"
                                    android:inputType="number"
                                    android:background="@color/colorAlpha1"
                                    android:maxLength="2"
                                    android:maxLines="1"
                                    android:lines="1"
                                    android:selectAllOnFocus="true" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="日"
                                    android:id="@+id/textView24"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/colorfont"
                                    android:gravity="center"
                                    android:textSize="16dp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:layout_marginTop="2dp"
                            android:id="@+id/work_id_ll"
                            android:layout_weight="0">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="1"
                                android:layout_weight="1" >

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/appoint_worker"
                                    android:id="@+id/textView37"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/colorfont"
                                    android:gravity="center"
                                    android:layout_weight="0.25"
                                    android:textSize="16dp"
                                    android:background="@drawable/shape_free" />

                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/work_id_et"
                                    android:textColor="@color/colorBlack"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center"
                                    android:layout_weight="0.6"
                                    android:hint="填写工人账号"
                                    android:textColorHint="@color/textcolorhint"
                                    android:maxLines="1"
                                    android:lines="1"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:editable="false"
                                    android:background="@drawable/shape_free"
                                    android:clickable="false" />

                                <Button
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:id="@+id/work_id_picker_but"
                                    android:drawableLeft="@drawable/icon_arrow3"
                                    android:background="@color/colorAlpha1"
                                    android:enabled="true"
                                    android:paddingLeft="12dp"
                                    android:layout_weight="0.15"
                                    android:layout_gravity="center_vertical" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/test_addr_ll"></LinearLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <NumberPicker
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/numberPicker_test"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorAlpha1"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_curtain"
                    android:id="@+id/add_but"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="@color/colortab2" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/designate_but"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_weight="1"
                    android:text="指派工人"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/select_order_but"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_weight="1"
                    android:text="@string/read_order"
                    android:textSize="16dp"
                    android:background="@color/colortab2" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/input_but"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_weight="1"
                    android:text="@string/up_order"
                    android:textSize="16dp"
                    android:background="@color/colortab1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
